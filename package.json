{
	"private": true,
	"workspaces": [
		"json-rpc",
		"json-rpc-websocket",
		"json-rpc-websocket-server",
		"json-rpc-node",
		"json-rpc-browser",
		"demo"
	],
	"scripts": {
		"build": "npm run build-json-rpc && npm run build-json-rpc-websocket && npm run build-json-rpc-node && npm run build-json-rpc-browser && npm run build-demo",
		"build-json-rpc": "npm run --workspace @hediet/json-rpc build",
		"build-json-rpc-websocket": "npm run --workspace @hediet/json-rpc-websocket build",
		"build-json-rpc-node": "npm run --workspace @hediet/json-rpc-node build",
		"build-json-rpc-browser": "npm run --workspace @hediet/json-rpc-browser build",
		"build-demo": "npm run --workspace demo build"
	}
}